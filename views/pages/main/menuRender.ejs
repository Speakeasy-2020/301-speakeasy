<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Speakeasy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%- include('../partials/header.ejs') %> 
    
  </head>
  <body>
    <!-- <div class="mobile-container"> -->
      <header>
        <div class="topnav">
          <%- include('../partials/navBar.ejs') %>
        </div>
        
      </header>
      <main>
          <h2>  </h2>
        <div id="searchForDrink">
          <h2>Look for a drink!!</h2>
          <form action="/menuRender" method="GET" >
          <input type="text" name="search" placeholder="Enter A Drink">
          <button type="submit">Take A Look</button>
          </form>
        </div>
        <section id="menuSection">
        </section>
        <section id="savedMenu">
          <% databaseResults.map(obj => { %>
            <div class="DBItems">
              <img src="<%- obj.thumbnail %>" alt="">
              <h2><%= obj.drinktitle %></h2>
              <p> <%= obj.instructions %> </p>
            </div>
            <% }) %>
        </section>
        <form action="/publicView" method="GET">
        <button>Save</button>
        </form>
      </main>      
      <footer>
          <!-- replace this with a partial? -->
  
      </footer>
    <!-- </div> -->
    <script src="/js/index.js"></script>
  </body>
</html>
