<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Speakeasy</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%- include('../partials/header.ejs') %> 
</head>

<body>
    <header>
      <div class="topnav">
        <%- include('../partials/navBar.ejs') %>
      </div>
    </header>
    
    <div id="guestform">
      <form action="/guestInput" method="post" class="guestSubmit">
        <label for="guestName">Name of guest:</label><br>
        <input type="text" id="guestName" name="guestName"  placeholder="Enter name here"><br>
  
        <input id="nameListSubmit" type="submit" value="Submit">
        
      </form>
    </div>
      <section id="guestDisplay">
        <div class="guestDiv">
          <h2 id="nameList">
            <h3>Guest Names</h3>
            <p>
              <% guests.forEach( guest => { %>
            </p>
            <p>
              <%= guest.guestname %>
            </p>
  
            <form method='post' action='/guests/<%= guest.id %>?_method=delete'>
              <button id="deleteGuest" type='submit'>Delete Guest</button>
            </form>
            <% }) %>
          </h2>
        </div>
      </section>
     
      <form id="saveform" action="/menuRender" method="GET" class="guestToMenu">
        <button id="save">Save Guests</button>

  <footer>
  </footer>
    <script   src="https://code.jquery.com/jquery-3.4.1.min.js"   integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="   crossorigin="anonymous"></script>
    <script src="/js/index.js"></script>
  </body>
</html>
